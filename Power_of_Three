class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n == 1) { return true;}
        if(n % 3 != 0) {
            return false;
        }
        int i = 1;
        while(i < n){
            i *= 3;
        }
        if(i == n) {
            return true;
        }
        else{
            return false;
        }
        
    }
};
